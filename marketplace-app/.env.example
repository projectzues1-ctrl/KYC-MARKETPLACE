# Database Configuration
# Get your PostgreSQL connection string from Render
DATABASE_URL=postgresql://user:password@host:port/database

# Application Environment
NODE_ENV=production

# Server Port
PORT=10000

# JWT Secret (generate a strong random string)
JWT_SECRET=your-super-secret-jwt-key-change-this

# Email Configuration (Optional - for email notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=noreply@yourapp.com

# Blockchain Configuration (Optional - for crypto features)
BLOCKCHAIN_RPC_URL=https://bsc-dataseed1.binance.org:443
BLOCKCHAIN_NETWORK=BSC
MASTER_PRIVATE_KEY=your-master-private-key

# Wallet Configuration
WALLET_SWEEP_ADDRESS=your-sweep-wallet-address

# API Keys (if needed)
ETHERSCAN_API_KEY=your-etherscan-api-key

# Feature Flags
ENABLE_BLOCKCHAIN=false
ENABLE_EMAIL=false
